        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: 'mb-3', local: true do |f| %> 
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">ニックネーム</label>
            </div>
            <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) ニッチ太郎", autofocus: true %>
          </div>         
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">メールアドレス</label>
            </div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
          </div>
            <div class="form-group">
              <div class='form-text-wrap'>
                <label class="form-text">パスワード</label>
              </div>
           <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
          </div>
  
          <div class='register-btn'>
            <%= f.submit "新規登録" ,class:"login-red-btn" %>
          </div>
        <% end %>
        <div class="modal-footer">
          <button class="modal-title" data-bs-target="#signinModal" data-bs-toggle="modal" data-bs-dismiss="modal">ログイン画面へ移る</button>
        </div>
      </div>
    </div>
  </div>
</div>
