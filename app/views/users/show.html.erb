<%= render "shared/header" %>
<div class="user-page">
  <div class="user-contents">
    <p class="user-nickname-follow"><%= @user.nickname %></p>
    <% if current_user != @user %>
      <% if @user.followed_by?(current_user) %>
        <%=link_to "フォローを解除", user_relationships_path(@user.id),class: "btn btn--blue btn--radius" , method: :delete %>
      <% else %>
        <%=link_to "#{@user.nickname}をフォローする", user_relationships_path(@user.id),class: "btn btn--blue btn--rudius" ,method: :post %>
      <% end %>
    <% end %>

