        <tr>
          <th class="detail-item">フォロー</th>
          <th class="detail-item">フォロワー</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <% @user.followings.each do |user| %>
              <p class=“f-user”><%= link_to user.nickname, user_path(user.id) %></p>
            <% end %>
          </td>
          <td>
            <% @user.followers.each do |user| %>
              <p class=“f-user”><%= link_to user.nickname, user_path(user.id) %></p>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
