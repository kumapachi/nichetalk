<div class="side-bar-header">
  <div class="header-name">
    <%= link_to current_user.nickname, edit_user_path(current_user)%>
  </div>
  <div class="create-room">
    <%= link_to "チャットを作成する", new_topic_room_path %>
  </div>
</div>

<div class="rooms">
  <% @rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, topic_room_messages_path(@topic, room) %>
      </div>
    </div>
  <% end %>
</div>